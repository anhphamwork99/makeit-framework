{
    "mcpServers": {
        "lark-mcp": {
            "command": "npx",
            "args": [
                "-y",
                "@larksuiteoapi/lark-mcp",
                "mcp",
                "-a",
                "<YOUR_LARK_APP_ID>",
                "-s",
                "<YOUR_LARK_APP_SECRET>",
                "--domain",
                "https://open.larksuite.com",
                "-t",
                "preset.default,preset.task.default,preset.calendar.default"
            ]
        }
    }
}